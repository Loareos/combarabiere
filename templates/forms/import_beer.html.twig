{% extends 'base.html.twig' %}

{% block title %}Import a Beer{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/form_style.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/import_beer.js') }}"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
{% endblock %}

{% block body %}

    <div class="title_page">
        <h2>Import d'une bi√®re</h2>
    </div>


    {{ form_start(formBeer) }}
    <div class="form">
        <div class="row">
            <div class="label">{{ form_label(formBeer.name) }}</div>
            {{ form_widget(formBeer.name) }}
        </div>
        <div class="row">
            <div class="label">{{ form_label(formBeer.alcool) }}</div>
            {{ form_widget(formBeer.alcool) }}
        </div>

        <div class="row">
            <div class="label">{{ form_label(formBeer.types) }}</div>
            {{ form_widget(formBeer.types) }}
        </div>

        <div class="row">
            <div class="label">{{ form_label(formBeer.description) }}</div>
            {{ form_widget(formBeer.description) }}
        </div>

        <div class="row">
            <button type="submit" class="btn">Enregistrer</button>
        </div>
    </div>
    {{ form_end(formBeer) }}

{% endblock %}